# ===========================================
# Mappino - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env files to version control!

# ===========================================
# Application
# ===========================================
DEBUG=false
LOG_LEVEL=INFO
# APP_NAME=Peppol Tools API
# APP_VERSION=1.0.0

# ===========================================
# CORS (comma-separated list or JSON array)
# ===========================================
# Production: Set to your frontend domain(s)
# CORS_ORIGINS=["https://yourapp.com", "https://www.yourapp.com"]
# Development: Allow all
CORS_ORIGINS=["*"]

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_VALIDATION=10/minute
RATE_LIMIT_LOOKUP=30/minute

# ===========================================
# Peppol / Helger External APIs
# ===========================================
PEPPOL_DIRECTORY_BASE=https://directory.peppol.eu
HELGER_API_BASE=https://peppol.helger.com/api
HELGER_WSDL_URL=https://peppol.helger.com/wsdvs?wsdl
HELGER_ENDPOINT=https://peppol.helger.com/wsdvs
HELGER_RATE_LIMIT_MS=550

# SML environment (digitprod for production, digittest for test)
# SML_PRODUCTION=digitprod
# SML_TEST=digittest
USE_TEST_SML=false

# Lookup configuration
# LOOKUP_FALLBACK_ICDS=["0106", "0199", "0060"]
# LOOKUP_MAX_RETRIES=5
# LOOKUP_BASE_BACKOFF=0.5

# ===========================================
# Firebase Authentication & Firestore
# ===========================================
FIREBASE_ENABLED=true
FIREBASE_PROJECT_ID=mappino-app
# Path to Firebase service account key JSON
# IMPORTANT: NEVER commit this file to git!
FIREBASE_CREDENTIALS_PATH=../firebase-credentials-production.json

# Firebase Emulators (for development only)
# Uncomment these when running with Firebase emulators
# FIREBASE_EMULATOR_HOST=127.0.0.1:8080
# FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099

# ===========================================
# Google Cloud Platform
# ===========================================
# GCP Project ID (for Secret Manager, Firestore, etc.)
GCP_PROJECT_ID=mappino-app

# Use GCP Secret Manager for secrets
USE_SECRET_MANAGER=false

# Service account credentials (auto-detected in GCP environments)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ===========================================
# Feature Flags
# ===========================================
ENABLE_HELGER_VALIDATOR=true
ENABLE_XSD_VALIDATOR=true
ENABLE_SCHEMATRON_VALIDATOR=true
ENABLE_LEGACY_ROUTES=true

# ===========================================
# File Upload Limits
# ===========================================
MAX_UPLOAD_SIZE_MB=50
MAX_XML_SIZE_MB=10
MAX_XSLT_SIZE_MB=5

# ===========================================
# Schema Sync URLs (defaults shown)
# ===========================================
# UBL_SCHEMA_URL=https://docs.oasis-open.org/ubl/os-UBL-2.1/UBL-2.1.zip
# PEPPOL_BIS_URL=https://github.com/OpenPeppol/peppol-bis-invoice-3/archive/refs/heads/master.zip
# EN16931_URL=https://github.com/ConnectingEurope/eInvoicing-EN16931/archive/refs/heads/master.zip
# PEPPOL_CODELISTS_URL=https://docs.peppol.eu/edelivery/codelists/

# ===========================================
# Docker / Deployment
# ===========================================
PORT=8000
